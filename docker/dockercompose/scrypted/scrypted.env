# Scrypted Environment Variables
# Copy this file to .env and customize as needed

# Watchtower HTTP API Token for auto-updates
# Generate with: openssl rand -hex 32
WATCHTOWER_HTTP_API_TOKEN=env_missing_fallback

# DNS Servers (optional, defaults to Cloudflare and Google DNS)
SCRYPTED_DNS_SERVER_0=1.1.1.1
SCRYPTED_DNS_SERVER_1=8.8.8.8

# Watchtower periodic polls (optional, defaults to true)
WATCHTOWER_HTTP_API_PERIODIC_POLLS=true
